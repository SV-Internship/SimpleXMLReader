<Application x:Class="XmlReader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:localview="clr-namespace:XmlReader.View"
             xmlns:localviewmodel="clr-namespace:XmlReader.ViewModel"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type localviewmodel:OpenViewModel}">
            <localview:OpenView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type localviewmodel:SearchViewModel}">
            <localview:SearchView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type localviewmodel:FilterViewModel}">
            <localview:FilterView/>
        </DataTemplate>
    </Application.Resources>
</Application>
